---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Product Manager with a focus on AI agents and generative AI, building products that drive impact.", image = "/images/gabri.jpg" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Get base path from environment variables
const basePath = '';
const cssPath = `${basePath}/src/styles/global.css`;
const imagePath = `${basePath}/images/gabri.jpg`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(imagePath, Astro.site || Astro.url)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(imagePath, Astro.site || Astro.url)} />
    
    <!-- Additional Meta -->
    <meta name="author" content="Gabri Ansaldo" />
    <meta name="keywords" content="product manager, generative AI, AI agents, agentic systems, multi-agent, enterprise products, LLMs" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Styles -->
    <link rel="stylesheet" href={cssPath}>
  </head>
  <body>
    <!-- Skip Link -->
    <a href="#main" class="sr-only">Skip to main content</a>
    
    <!-- Header -->
    <header class="header">
      <div class="container">
        <div class="flex justify-between items-center">
          <a href="/" class="font-mono font-semibold text-lg text-text hover:text-accent transition-colors">
            Gabri Ansaldo
          </a>
          
          <!-- Desktop Navigation -->
          <nav class="hidden md:block">
            <ul class="flex space-x-6">
              <li><a href="/" class="text-muted hover:text-text transition-colors" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a></li>
              <li><a href="/about/" class="text-muted hover:text-text transition-colors" aria-current={Astro.url.pathname === '/about/' ? 'page' : undefined}>About</a></li>
              <li><a href="/projects/" class="text-muted hover:text-text transition-colors" aria-current={Astro.url.pathname === '/projects/' ? 'page' : undefined}>Projects</a></li>
              <li><a href="/contact/" class="text-muted hover:text-text transition-colors" aria-current={Astro.url.pathname === '/contact/' ? 'page' : undefined}>Contact</a></li>
            </ul>
          </nav>
          
          <!-- Mobile Menu Button -->
          <button 
            class="md:hidden burger-menu-btn" 
            aria-label="Toggle navigation menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
          </button>
        </div>
        
        <!-- Mobile Navigation -->
        <nav id="mobile-menu" class="mobile-menu hidden">
          <ul class="mobile-nav-list">
            <li><a href="/" class="mobile-nav-link" aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a></li>
            <li><a href="/about/" class="mobile-nav-link" aria-current={Astro.url.pathname === '/about/' ? 'page' : undefined}>About</a></li>
            <li><a href="/projects/" class="mobile-nav-link" aria-current={Astro.url.pathname === '/projects/' ? 'page' : undefined}>Projects</a></li>
            <li><a href="/contact/" class="mobile-nav-link" aria-current={Astro.url.pathname === '/contact/' ? 'page' : undefined}>Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    
    <!-- Main Content -->
    <main id="main">
      <slot />
    </main>
    
